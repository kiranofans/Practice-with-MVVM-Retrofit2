<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
 <androidx.coordinatorlayout.widget.CoordinatorLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:isScrollContainer="true">
     <androidx.core.widget.NestedScrollView
         android:id="@+id/article_nested_view"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         >
     <androidx.constraintlayout.widget.ConstraintLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         tools:context=".ArticleActivity">

         <androidx.appcompat.widget.AppCompatTextView
             android:id="@+id/article_tv_content_title"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_margin="8dp"
             app:layout_constraintTop_toTopOf="parent"
             android:text="Article Title"
             app:layout_constraintVertical_chainStyle="packed"
             app:layout_constraintBottom_toTopOf="@+id/article_img_view_content"
             android:textStyle="bold"
             android:textColor="@android:color/black"
             android:textSize="20sp"
             android:textAlignment="center" />

         <androidx.appcompat.widget.AppCompatImageView
             android:id="@+id/article_img_view_content"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_margin="8dp"
             app:layout_constraintTop_toBottomOf="@+id/article_tv_content_title"
             app:layout_constraintBottom_toTopOf="@+id/constraint_layout"
             android:src="@android:drawable/ic_menu_report_image" />

         <androidx.constraintlayout.widget.ConstraintLayout
             android:id="@+id/constraint_layout"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             app:layout_constraintTop_toBottomOf="@+id/article_img_view_content">
             <androidx.appcompat.widget.AppCompatTextView
                 android:id="@+id/article_author_tv"
                 android:layout_margin="8dp"
                 app:layout_constraintHorizontal_chainStyle="spread_inside"
                 app:layout_constraintTop_toTopOf="parent"
                 app:layout_constraintBottom_toBottomOf="parent"
                 app:layout_constraintStart_toStartOf="parent"
                 app:layout_constraintEnd_toStartOf="@+id/article_tv_date"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textAlignment="textStart"
                 android:text="Author"/>

             <androidx.appcompat.widget.AppCompatTextView
                 android:id="@+id/article_tv_date"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_margin="8dp"
                 app:layout_constraintTop_toTopOf="parent"
                 app:layout_constraintBottom_toBottomOf="parent"
                 app:layout_constraintEnd_toEndOf="parent"
                 app:layout_constraintStart_toEndOf="@+id/article_author_tv"
                 android:textAlignment="textEnd"
                 android:text="2019-01-01 00:00:00" />
         </androidx.constraintlayout.widget.ConstraintLayout>

             <androidx.appcompat.widget.AppCompatTextView
                 android:id="@+id/article_tv_content"
                 android:layout_width="match_parent"
                 android:layout_margin="8dp"
                 android:textSize="14sp"
                 app:layout_constraintTop_toBottomOf="@+id/constraint_layout"
                 android:layout_height="wrap_content"
                 android:text="content"/>
         <androidx.appcompat.widget.AppCompatButton
             android:id="@+id/article_tv_source_link"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textAlignment="textStart"
             android:layout_margin="8dp"
             android:clickable="true"
             android:background="@android:drawable/btn_default_small"
             app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintTop_toBottomOf="@+id/article_tv_content"
             android:text="Go to source page"/>
     </androidx.constraintlayout.widget.ConstraintLayout>
     </androidx.core.widget.NestedScrollView>
 </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>
