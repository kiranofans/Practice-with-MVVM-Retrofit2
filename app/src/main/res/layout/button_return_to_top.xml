<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true">

        <Button
            android:id="@+id/button_return_to_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/preference_margin_small"
            android:padding="@dimen/preference_margin_medium"
            android:textAllCaps="false"
            android:drawableLeft="@mipmap/ic_go_to_top_arrow"
            android:background="@drawable/background_button_go_to_top"
            android:textColor="@color/colorPrimary"
            android:textAlignment="center"
            android:text="@string/button_return_to_top"/>
    </FrameLayout>
</layout>
