<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        android:background="@android:color/transparent">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/img_bottom_nav_share"
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/img_bottom_nav_tweet"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            android:layout_marginEnd="32dp"
            android:background="@android:drawable/ic_menu_share" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/img_bottom_nav_tweet"
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/img_bottom_nav_share"
            app:layout_constraintEnd_toStartOf="@+id/img_bottom_nav_facebook"
            android:layout_marginEnd="32dp"
            android:background="@mipmap/ic_share_twitter" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/img_bottom_nav_facebook"
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/img_bottom_nav_tweet"
            app:layout_constraintEnd_toStartOf="@+id/img_bottom_nav_download"
            android:layout_marginEnd="32dp"
            android:background="@mipmap/ic_share_facebook" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/img_bottom_nav_download"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/img_bottom_nav_facebook"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@mipmap/ic_download_48" />
</androidx.constraintlayout.widget.ConstraintLayout>
    </layout>
