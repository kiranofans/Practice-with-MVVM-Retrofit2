<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/search_result_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_baseline_image_48"/>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/search_result_img">
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/search_result_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/preference_text_size_title_small"
                android:textColor="@android:color/black"
                android:text="@string/app_name"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/search_result_time_stamp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/search_result_title"
                android:text="2002-3-6"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </RelativeLayout>
</layout>
